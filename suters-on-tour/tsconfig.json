{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",              // ✅ Needed for React files
    "types": ["node"]
  },
  "include": [
    "src",                           // ✅ for Gatsby pages/components
    "gatsby-*.ts",                   // ✅ for config files
    "scripts"                        // ✅ for your CLI utilities
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ]
}
